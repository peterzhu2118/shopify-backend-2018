            <li><a href="https://linkedin.com/in/peterzhu2118">LinkedIn</a></li>
          </ul>
        </div>
      </nav>

      <% unless flash[:notice].nil? %>
        <div class="alert alert-info" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <%  unless flash[:error].nil? %>
        <div class="alert alert-danger" role="alert">
            <%= flash[:error] %>
        </div>
      <% end %>

      <%= yield %>

